{
  "minify": true,

  "jsc": {

    "minify": {
      "compress": {
        "unused": true
      },
      "mangle": false
    },

    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": false,
      "dynamicImport": false
    },
    
    "transform": {
      "react": {
        "pragma": "React.createElement",
        "pragmaFrag": "React.Fragment",
        "throwIfNamespace": true,
        "development": true,
        "useBuiltins": false,
        "runtime": "automatic"
      },
      "optimizer": {
        "globals": {
          "vars": {
            "__DEBUG__": "true"
          }
        }
      }
    },

    "target": "es2020",
    "loose": false,

    "externalHelpers": true,

    "keepClassNames": false
  }
}